#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/bash" ]; then
  "$basedir//bin/bash"  "$basedir/../git-bfg/bin/bfg-ls" "$@"
  ret=$?
else 
  /bin/bash  "$basedir/../git-bfg/bin/bfg-ls" "$@"
  ret=$?
fi
exit $ret
